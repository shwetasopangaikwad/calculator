<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.shweta.calculator.CalciActivity">

    <EditText
        android:id="@+id/edt_num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:hint="Enter 1st no."
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/edt_num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_num1"
        android:layout_marginTop="13dp"
        android:hint="Enter 2nd no."
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sub"
        android:layout_alignEnd="@+id/btn_sub"
        android:layout_alignRight="@+id/btn_sub"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:hint="Result"
        android:text="Result"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/btn_sub"
        android:layout_toStartOf="@+id/btn_sub"
        android:text="+" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_add"
        android:layout_alignBottom="@+id/btn_add"
        android:layout_centerHorizontal="true"
        android:text="-" />

    <Button
        android:id="@+id/btn_mult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_sub"
        android:layout_alignBottom="@+id/btn_sub"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="*" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add"
        android:layout_below="@+id/btn_add"
        android:layout_marginTop="48dp"
        android:text="/" />

    <Button
        android:id="@+id/btn_sq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_div"
        android:layout_alignBottom="@+id/btn_div"
        android:layout_alignLeft="@+id/btn_sub"
        android:layout_alignStart="@+id/btn_sub"
        android:text="x^2" />

    <Button
        android:id="@+id/btn_cube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_mult"
        android:layout_alignRight="@+id/btn_mult"
        android:layout_alignTop="@+id/btn_sq"
        android:text="x^3" />

</RelativeLayout>
